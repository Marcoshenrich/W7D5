<header><h1>New Post</h1></header>

<form action="<%= posts_url %>" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<label>Title<input type="text" name="post[title]"></label>
<label>URL<input type="text" name="post[url]"></label>
<label>Content<input type="text" name="post[content]"></label>

    <% Sub.all.each do |sub| %>
    <label><%= sub.title %><input type="checkbox" name="post[sub_ids][]" value="<%=sub.id%>"></label>
    <% end %>

<button>Post</button>
</form>